@model Person


<form action="/Home/Add" method="post">
    <label for="name" asp-for="username">User Name : </label>
    <input type="text" asp-for="username" id="name" name="name" placeholder="Enter  User Name : " required>
    <br><br>
    <label for="email" asp-for="email">Email : </label>
    <input type="text" asp-for="email" id="email" name="email" placeholder="Enter Email : " required>
    <br><br>
    <input type="submit" value="submit">

</form>
